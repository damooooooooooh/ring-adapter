{
  "author": "damooooooooooh", 
  "description": "Ring device adapter for Ring Doorbells, Lights and Sirens.", 
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}", 
      "primary_type": "adapter", 
      "strict_max_version": "*", 
      "strict_min_version": "0.10.0"
    }
  }, 
  "homepage_url": "https://github.com/damooooooooooh/ring-adapter", 
  "id": "ring-adapter", 
  "license": "MPL-2.0", 
  "manifest_version": 1, 
  "name": "Ring", 
  "options": {
    "default": {
      "email": "", 
      "password": "", 
      "otp": "", 
      "recordOnDing": false,
      "recordOnMotion": false,
      "recordDuration": 20,
      "pollInterval": 10
    }, 
    "schema": {
      "description": "Enter your ring.com credentials", 
      "properties": {
        "RingCredentials": {
          "properties": {
            "email": {
              "type": "string"
            }, 
            "password": {
              "type": "string"
            }, 
            "otp": {
              "description": "Enter the OTP sent via text/email",
              "type": "string"
            }
          }, 
          "type": "object"
        }, 
        "RecordingOptions": {
          "properties": {
            "recordOnDing": {
              "description": "Record on ding",
              "type": "boolean"
            },
            "recordOnMotion": {
              "description": "Record on motion",
              "type": "boolean"
            },
            "recordDuration": {
              "description": "Number of seconds to record video (20secs = 2.5MB)", 
              "maximum": 120, 
              "minimum": 10, 
              "type": "number"
            },
            "clearOldRecordingsAfter": {
              "description": "Number of days to keep recordings for", 
              "maximum": 120, 
              "minimum": 10, 
              "type": "number"
            }
          }, 
          "type": "object"
        }, 
        "pollInterval": {
          "description": "Interval in seconds to poll the Ring api. Default 10.", 
          "maximum": 60, 
          "minimum": 8, 
          "type": "number"
        }
      }, 
      "required": [
        "email", 
        "password"
      ], 
      "type": "object"
    }
  }, 
  "short_name": "Ring", 
  "version": "0.0.10"
}